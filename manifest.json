{
    "name": "World Wide Check",
    "description": "World Wide Check is a powerful Chrome extension designed to combat misinformation on the internet. It enables users to report and flag potentially false or misleading content directly from webpages, contributing to a safer online environment.",
    "version": "1.0",
    "manifest_version": 3,
    "icons":{
        "16": "/img/wwc_16x16.jpg"
    },
    "action": {
        "default_popup": "./popup/popup.html",
        "default_title": "World Wide Check"
      },
    "permissions": ["activeTab", "scripting", "contextMenus","storage", "tabs"],
    "web_accessible_resources": [
      {
        "resources": [
          "img/*.png",
          "img/*.jpg"
        ],
        "matches": [
          "https://api.tvmaze.com/*"
        ]
      }],
    "host_permissions": [
      "https://developer.chrome.com/*"
    ],
    "optional_permissions": ["topSites"],
    "optional_host_permissions": ["http://www.developer.chrome.com/*", "https://www.google.com/"],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["background.js",
                   "./popup/popup.js",
                   "./scripts/content.js",
                   "./scripts/scambtn.js",
                   "./scripts/scrollMatch.js",
                   "./scripts/setUrl.js"       
                  ],
            "run_at": "document_end"
        }
    ]
  }