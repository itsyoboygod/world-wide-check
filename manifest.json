{
  "name": "World Wide Check",
  "description": "World Wide Check is a powerful Chrome extension designed to combat misinformation on the internet. It enables users to report and flag potentially false or misleading content directly from webpages, contributing to a safer online environment.",
  "version": "1.0",
  "manifest_version": 3,
  "icons": {
    "16": "/img/ofc_logo_16x16.png",
    "32": "/img/ofc_logo_32x32.png",
    "48": "/img/ofc_logo_48x48.png",
    "64": "/img/ofc_logo_64x64.png",
    "128": "/img/ofc_logo_128x128.png",
    "256": "/img/ofc_logo_256x256.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "notifications",
    "tabs"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "/popup/popup.html",
    "deafult_title": "World Wide Check"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "popup/popup.js",
        "scripts/scambtn.js",
        "scripts/readDom.js"
      ]
    }
  ]
}