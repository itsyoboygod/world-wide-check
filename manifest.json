{
  "name": "World Wide Check",
  "description": "Combat online misinformation. Report false content directly from webpages for a safer online environment.",
  "version": "1.0.1",
  "manifest_version": 3,
  "icons": {
    "16": "/img/wwc_logo_icon_16x16.png",
    "32": "/img/ofc_logo_32x32.png",
    "48": "/img/ofc_logo_48x48.png",
    "64": "/img/ofc_logo_64x64.png",
    "128": "/img/ofc_logo_128x128.png",
    "256": "/img/ofc_logo_256x256.png"
  },
  "permissions": [
    "contextMenus",
    "activeTab",
    "scripting",
    "notifications",
    "tabs"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    "default_popup": "/popup/popup.html",
    "deafult_title": "World Wide Check"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "popup/recaptcha.html",
        "popup/recaptcha.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "popup/popup.js",
        "scripts/readDom.js"
      ],
      "css": [
        "css/style.css"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'; frame-src https://www.google.com/recaptcha/ https://recaptcha.html"
  }
}